#include <bits/stdc++.h> 

using namespace std;

int main() {
	// Read the number of test cases.
	int T;
	scanf("%d", &T);
	for(int i=0;i<T;i++) {
		// Read the input a, b
		int a, b;
		scanf("%d %d", &a, &b);
        int ans =(a%b);
		// Compute the ans.
		// Complete the below line.
		printf("%d\n", ans);
	}

	return 0;
}
